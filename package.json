{
  "name": "ory-editor-plugins-spoiler",
  "version": "0.0.0",
  "main": "./lib/index.js",
  "scripts": {
	    "build": "npm-run-all --parallel build:lib build:css",
	    "build:watch": "npm-run-all --parallel build:lib:watch build:css:watch",
	    "build:lib": "babel ./src --source-maps --ignore test.js --out-dir ./lib --presets=react",
	    "build:lib:watch": "npm run build:lib -- --watch",
	    "build:css": "postcss -c ../../../postcss.config.js --dir lib/ src/index.css",
	    "build:css:watch": "npm run build:css -- -w",
	    "prebuild": "npm run clean",
	    "clean": "rimraf \"lib/*\""
	  },
 "engines": {
    "node": ">=6.0.0",
    "npm": "~3.8.0"
  },
  "author": "ORY GmbH",
  "license": "AGPL-3.0",
  "peerDependencies": {
    "react": "^15.4.2",
    "react-dom": "^15.4.2"
  },
  "dependencies": {
    "material-ui": "^0.16.7",
    "ory-editor-core": "0.0.0"
  },
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "postcss-cli": "^2.6.0",
    "postcss-cssnext": "^2.9.0",
    "postcss-import": "^9.1.0",
    "babel-eslint": "^7.1.1",
    "babel-plugin-transform-class-properties": "^6.19.0",
    "babel-plugin-transform-inline-environment-variables": "^6.8.0",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-react": "^6.16.0",
    "babel-preset-stage-2": "^6.18.0",
    "coveralls": "^2.11.15",
    "cross-env": "^3.1.4",
    "enzyme": "^2.7.0",
    "eslint": "^3.11.1",
    "eslint-config-ory-am": "^3.0.0",
    "eslint-config-ory-am-react": "^3.0.0",
    "eslint-plugin-flowtype": "^2.29.1",
    "eslint-plugin-react": "^6.8.0",
    "flow-bin": "^0.37.4",
    "jest": "^18.1.0",
    "react": "^15.4.2",
    "react-addons-test-utils": "^15.4.2",
    "react-dom": "^15.4.2",
    "rimraf": "^2.5.4"
  }
}
